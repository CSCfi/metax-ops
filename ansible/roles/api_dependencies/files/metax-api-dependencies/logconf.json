{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s p%(process)d %(name)s %(levelname)s: %(message)s",
            "datefmt": "%Y-%m-%dT%H:%M:%S.%03dZ"
        }
    },
    "handlers": {
        "general": {
            "level": "INFO",
            "class": "logging.FileHandler",
            "filename": "/var/log/api_dependencies/requirements.log",
            "formatter": "standard"
        }
    },
    "loggers": {
        "api_dependencies": {
            "level": "INFO",
            "handlers": ["general"]
        }
    }
}