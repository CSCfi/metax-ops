{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s p%(process)d %(name)s %(levelname)s: %(message)s",
            "datefmt": "%Y-%m-%dT%H:%M:%S.%03dZ"
        }
    },
    "handlers": {
        "indexer": {
            "level": "INFO",
            "class": "logging.FileHandler",
            "filename": "/var/log/refdata/indexer.log",
            "formatter": "standard"
        },
        "writer": {
            "level": "INFO",
            "class": "logging.FileHandler",
            "filename": "/var/log/refdata/writer.log",
            "formatter": "standard"
        }
    },
    "loggers": {
        "refdata_indexer": {
            "level": "INFO",
            "handlers": ["indexer"]
        },
        "refdata_writer": {
            "level": "INFO",
            "handlers": ["writer"]
        }
    }
}