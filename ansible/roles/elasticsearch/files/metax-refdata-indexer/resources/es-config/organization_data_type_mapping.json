{
  "dynamic_templates": [
    {
      "label": {
        "path_match":   "label.*",
        "mapping": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        }
      }
    }
  ],
  "properties": {
    "id": {
      "type": "keyword"
    },
    "uri": {
      "type": "keyword",
      "index": "false"
    },
    "parent_id": {
      "type": "keyword"
    },
    "parent_label": {
      "type": "keyword",
      "index": false
    }
  }
}
